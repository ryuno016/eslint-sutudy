{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-console": "error",      // console.logの禁止
    "eqeqeq": ["error", "always"], // 厳密等価演算子の強制
    "curly": "error"           // 波括弧の強制
  }
}
